<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc">

    <TextView
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:text="SimpleCalculator"
        android:textSize="15sp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#fff">

        <TextView
            android:textColor="#000"
            android:textSize="25sp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc">
        <TableRow
            android:layout_marginTop="20dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#1284DF"
                android:layout_weight="1"
                android:id="@+id/btn24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
            <Button
                android:backgroundTint="#1284DF"
                android:layout_weight="1"
                android:id="@+id/btn25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ac"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xⁿ"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="6dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="newClick"/>
        </TableRow>
    </TableLayout>

</LinearLayout>