<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc">

    <TextView
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:text="SimpleCalculator"
        android:textSize="15sp"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:padding="20dp"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginBottom="20dp"
       android:background="#fff">

       <TextView
           android:textColor="#000"
           android:textSize="25sp"
           android:id="@+id/textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="0"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true" />
   </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc">
        <TableRow
            android:layout_marginTop="20dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"
                />

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#1284DF"
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
            <Button
                android:backgroundTint="#1284DF"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ac"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="÷"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"
                />

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"

            android:weightSum="5">
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↑"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>

            <Button
                android:id="@+id/btn19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:onClick="ButtonClick"
                android:text="↓"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
            <Button
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/btn20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:onClick="ButtonClick"/>
        </TableRow>
    </TableLayout>

    <Button
        android:background="@drawable/custom_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT" />

</LinearLayout>